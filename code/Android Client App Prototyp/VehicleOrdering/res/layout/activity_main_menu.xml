<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainMenuActivity" >
    
    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mainMenu_buttonHeight"
        android:text="@string/mainMenu_browseModels"
        android:textSize="@dimen/mainMenu_buttonTextSize"
        android:onClick="browseModels"
    />
    
    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mainMenu_buttonHeight"
        android:layout_marginTop="@dimen/mainMenu_buttonSpacing"
        android:text="@string/mainMenu_searchOrders"
        android:textSize="@dimen/mainMenu_buttonTextSize"
        android:onClick="searchOrders"
    />
    
</LinearLayout>